@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link " style="color:pink; font-family:'Franklin Gothic Medium','Arial Narrow', Arial, sans-serif"
            asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit"
                        class="nav-link btn btn-link border-0" style="color:pink; font-family:'Franklin Gothic Medium',
'Arial Narrow', Arial, sans-serif">Çıkış</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link " style="color:pink; font-family:'Franklin Gothic Medium',
'Arial Narrow', Arial, sans-serif" id="register" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    </li>
    <li class="nav-item">
            <a class="nav-link " style="color:pink; font-family:'Franklin Gothic Medium',
'Arial Narrow', Arial, sans-serif" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
}
</ul>
